<content-type>
  <display-name>Form input - Color</display-name>
  <content-display-name-script>$('label')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="basic-settings">
      <label>Basic settings</label>
      <items>
        <inline mixin="attr-label"/>
        <inline mixin="attr-title"/>
        <inline mixin="attr-required"/>
        <input name="colorList" type="TextLine">
          <label>List of colors to choose from (optional)</label>
          <occurrences minimum="0" maximum="0"/>
          <help-text>[Optional] Add a list of hex colors (e.g. #000000 for black) to customize what colors are selectable in the color picker. Leave this empty to use the default colors.</help-text>
        </input>
      </items>
    </field-set>
    <field-set name="advanced-settings">
      <label>Advanced settings</label>
      <items>
        <inline mixin="attr-name"/>
        <inline mixin="attr-class"/>
      </items>
    </field-set>
  </form>
</content-type>