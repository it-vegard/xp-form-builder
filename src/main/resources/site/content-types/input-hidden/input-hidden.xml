<content-type>
  <display-name>Form input - Hidden</display-name>
  <content-display-name-script>$('name')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="input">
      <label>Input</label>
      <items>
        <inline mixin="attr-id"/>
        <inline mixin="attr-name"/>
        <inline mixin="attr-value"/>
        <inline mixin="attr-class"/>
      </items>
    </field-set>
  </form>
</content-type>