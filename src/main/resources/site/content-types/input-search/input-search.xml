<content-type>
  <display-name>Form input - Search</display-name>
  <content-display-name-script>$('label')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="basic-settings">
      <label for="">Basic settings</label>
      <items>
        <inline mixin="attr-label"/>
        <inline mixin="attr-title"/>
        <inline mixin="attr-placeholder"/>
        <input name="searchTerms" type="TextLine">
          <label>Search terms</label>
          <occurrences minimum="0" maximum="0"/>
        </input>
        <inline mixin="attr-required"/>
      </items>
    </field-set>
    <field-set name="advanced-settings">
      <label>Advanced settings</label>
      <items>
        <inline mixin="attr-name"/>
        <inline mixin="attr-class"/>
        <inline mixin="attr-pattern"/>
      </items>
    </field-set>
  </form>
</content-type>