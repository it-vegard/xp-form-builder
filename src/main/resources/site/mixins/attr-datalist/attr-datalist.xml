<mixin>
  <display-name>Attr: Datalist</display-name>
  <items>
    <item-set name="datalistOptions">
      <label>Datalist options</label>
      <items>
        <input name="optionLabel" type="TextLine">
          <label>Display name</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="optionValue" type="TextLine">
          <label>Value</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
      </items>
      <immutable>false</immutable>
      <occurrences minimum="0" maximum="0"/>
    </item-set>
  </items>
</mixin>